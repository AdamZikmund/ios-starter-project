platform :ios, '11.0'
inhibit_all_warnings!

target 'starter' do
  use_frameworks!

  # Linter
  pod 'SwiftLint'

  # Networking
  pod 'Moya/RxSwift'

  # Rx
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxSwiftExt'
  pod 'Action'
  pod 'RxDataSources'
  pod 'RxKingfisher'

  # UI
  pod 'MBProgressHUD'
  pod 'lottie-ios'

  # Analytics
  pod 'Fabric'
  pod 'Crashlytics'

  # Persistence
  pod 'RealmSwift'
  
  # Localization
  pod 'Localize'

end
